{
  "title": "Laci",
  "rules": [
    {
      "description": "cotrol+click to command+click",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                  "left_control"
              ],
              "optional": [
                  "caps_lock"
              ]
            }
          },
          "to": [
            {
                "pointing_button": "button1",
                "modifiers": "left_command"

            },
            {
                "key_code": "left_control"
            }
          ]
        }
      ]
    },
    {
      "description" : "ctrl+t to command+t",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"t",
            "modifiers": {
              "mandatory": ["control"]
              }
          },
          "to":{
            "key_code":"t",
            "modifiers": ["left_command"]
          }
        }]
    },
    {
      "description" : "left command+left shift to ralt+l for input language switch",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"left_shift",
            "modifiers": {
              "mandatory": ["left_command"]
              }
          },
          "to":{
            "key_code":"l",
            "modifiers": ["right_option"]
          }
        }]
    },
    {
      "description" : "í",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"j",
            "modifiers": {
              "mandatory": ["right_command"]
              }
          },
          "to":{
            "key_code":"non_us_backslash"
          }
        }]
    },
    {
      "description" : "Í",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"i",
            "modifiers": {
              "mandatory": ["right_command"]
              }
          },
          "to":{
            "key_code":"non_us_backslash",
            "modifiers": 
             ["left_shift"]
          }
        }]
    },
{
      "description" : "shift insert",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"insert",
            "modifiers": {
              "mandatory": ["left_shift"]
              }
          },
          "to":{
            "pointing_button": "button3"
          }
        }]
    },





